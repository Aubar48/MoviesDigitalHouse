<!DOCTYPE html>
<html lang="es">
<!-- HEAD -->
<%- include('./partials/head') %>

    <body>
        <figure>
            
            <img src="/img/logo-DH.png" alt="Logo Digital House">
        </figure>
        <a class="btn btn-info" href="/">Home</a>
        <a class="btn btn-info" href="/movies">Movies List</a>
        <h1>MOVIES ORDERED DATE:</h1>
        <ul>
            <% for( let i=0; i < movies.length; i++ ) { %>
                <li>
                    <a href="/movies/detail/<%=movies[i].id%>">
                        <%= movies[i].title %>
                    </a> <br>
                    <%= 'RELEASE DATE: ' + movies[i].release_date %>
                </li>
                <% } %>

        </ul>


        <!-- SCRIPT-BOOTSTRAP -->
        <%- include('./partials/script') %>
    </body>

</html>